<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo_memorias"
    tools:context="com.example.brayanasdrubal.appalice.Memorias">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/g"
                android:layout_gravity="top|center">


                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/icon_memorias"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memorias"
                    android:textSize="45dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:textColor="#025F87"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/textView"
                    android:inputType="textAutoComplete|textAutoCorrect" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginBottom="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="@+id/g">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:visibility="invisible"
                    android:layout_weight="2">
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:background="#025F87"
                    android:layout_weight="0.4">
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:visibility="invisible"
                    android:layout_weight="2">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:measureWithLargestChild="true"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:measureWithLargestChild="true"
                    android:layout_weight="1"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:measureWithLargestChild="true"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:measureWithLargestChild="false"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/foto1"
                        android:id="@+id/l1"
                        android:orientation="vertical"
                        android:layout_weight=".3"
                        android:onClick="click"
                        android:clickable="true">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:layout_gravity="top|center"
                            android:gravity="top|center"
                            android:text="TÃº"
                            android:allowUndo="true"
                            android:autoText="true"
                            android:inputType="textAutoCorrect"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:hint="Iniciar nuevo TEST"
                        android:textColorHint="@color/white"
                        android:id="@+id/btnPic"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="30dp"
                        android:layout_below="@+id/textView3"
                        android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:id="@+id/t1"
                            android:layout_gravity="bottom|center"
                            android:gravity="bottom|center"
                            android:text=""
                            android:allowUndo="true"
                            android:autoText="true"
                            android:inputType="textCapWords|textAutoCorrect"
                            android:visibility="gone" />
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:id="@+id/e1"
                            android:layout_gravity="bottom|center"
                            android:gravity="bottom|center"
                            android:hint="Nombre"
                            android:inputType="textCapSentences|textAutoComplete" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:measureWithLargestChild="false"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/foto2"
                        android:orientation="vertical"
                        android:id="@+id/l2"
                        android:layout_weight=".3"
                        android:onClick="click2"
                        android:clickable="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:layout_gravity="top|center"
                            android:gravity="top|center"
                            android:text="Cuidador"
                            android:allowUndo="true"
                            android:autoText="true"
                            android:inputType="textAutoCorrect"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="30dp"
                        android:id="@+id/btnPic2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:layout_below="@+id/editText"
                        android:adjustViewBounds="true" />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:id="@+id/t2"
                            android:layout_gravity="bottom|center"
                            android:gravity="bottom|center"
                            android:text=""
                            android:allowUndo="true"
                            android:autoText="true"
                            android:inputType="textAutoCorrect"
                            android:visibility="gone"/>
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:id="@+id/e2"
                            android:layout_gravity="bottom|center"
                            android:gravity="bottom|center"
                            android:hint="Nombre"
                            android:inputType="textAutoComplete" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:background="@drawable/boton2"
                android:layout_marginTop="50dp"
                android:id="@+id/bo"
                android:onClick="confirma"
                android:gravity="center"
                android:text="Confirmar"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
